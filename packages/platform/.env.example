# Database
DATABASE_URL=postgresql://user:password@host/database
NEON_DATABASE_URL=postgresql://user:password@host.neon.tech/database

# API Server
PORT=3002
NODE_ENV=development
GAME_URL=https://thunderverse.app

# Discord Bot
DISCORD_BOT_TOKEN=your_discord_bot_token
DISCORD_CLIENT_ID=your_discord_client_id

# Twitter API
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_SECRET=your_twitter_access_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# OAuth - Discord
DISCORD_CLIENT_SECRET=your_discord_oauth_client_secret
DISCORD_REDIRECT_URI=https://thunderverse.app/auth/discord/callback

# OAuth - Twitter
TWITTER_CLIENT_ID=your_twitter_oauth_client_id
TWITTER_CLIENT_SECRET=your_twitter_oauth_client_secret
TWITTER_REDIRECT_URI=https://thunderverse.app/auth/twitter/callback

# OAuth - Facebook
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_REDIRECT_URI=https://thunderverse.app/auth/facebook/callback

# NextAuth
NEXTAUTH_URL=https://thunderverse.app
NEXTAUTH_SECRET=your_nextauth_secret_key

# Redis (for caching)
REDIS_URL=redis://localhost:6379

# Web3 - Ethereum
INFURA_PROJECT_ID=your_infura_project_id
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your_project_id

# Web3 - Solana
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# JWT
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
ALLOWED_ORIGINS=https://thunderverse.app,http://localhost:3000
