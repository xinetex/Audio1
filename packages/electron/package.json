{
  "name": "audiovisual-art-studio",
  "productName": "Audiovisual Art Studio",
  "version": "1.0.0",
  "description": "Transform sound into visual art with AI",
  "main": "main.js",
  "author": "Your Name",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:dmg": "electron-builder --mac dmg",
    "build:mas": "electron-builder --mac mas",
    "package": "electron-builder --dir",
    "notarize": "electron-builder --mac --publish never"
  },
  "dependencies": {
    "electron-log": "^5.0.0",
    "electron-updater": "^6.1.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0"
  },
  "build": {
    "appId": "com.yourdomain.audiovisual-art-studio",
    "productName": "Audiovisual Art Studio",
    "copyright": "Copyright Â© 2024",
    "mac": {
      "category": "public.app-category.graphics-design",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "darkModeSupport": true
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "files": [
      "main.js",
      "assets/**/*",
      "client-dist/**/*",
      "server-dist/**/*"
    ],
    "extraResources": [
      {
        "from": "../server/.env.example",
        "to": ".env.example"
      }
    ],
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    }
  }
}
